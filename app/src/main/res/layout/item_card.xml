<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cd_item_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="1dp"
    app:cardElevation="16dp">

    <ViewSwitcher
        android:id="@+id/is_card_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@anim/card_fan"
        android:outAnimation="@anim/card_fan_out">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="96dp"
            android:background="@drawable/bitmap_0"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@mipmap/poker_cover"/>

        <ImageView
            android:id="@+id/iv_card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0099ff"
            android:contentDescription="@null"
            android:src="@mipmap/mv1"
            android:scaleType="centerCrop"/>
    </ViewSwitcher>

</android.support.v7.widget.CardView>